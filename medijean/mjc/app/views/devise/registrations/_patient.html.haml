.page-header
  %h1
    = t("devise.new.patient.title")
.row
  .span5
    %p
      = t("devise.new.patient.text1")
    = form_for(User.new, :as => :user, :url => registration_path(:user), :html => {:class => "sign_up_form"}) do |f|
      - if params[:role]
        = hidden_field_tag :role, params[:role]
      %p= devise_error_messages!
      %fieldset
        = f.label :email_address, t("devise.email")
        = f.email_field :email, :autofocus => true, :placeholder => ("placeholders.email")
      %fieldset
        = f.label :password, t("devise.password")
        = f.password_field :password, :placeholder => t("devise.password_length")
      /
        %fieldset
          = f.label :password_confirmation, t("devise.password_confirmation")
          = f.password_field :password_confirmation, :placeholder => "re-enter password"
      %button.btn.btn-orange
        = t("devise.signup")

    %p.signup_agree
      = t("devise.new.patient.text2")
  .span7
    %img{:src=>"/assets/sign-up.jpg", :width=>"620", :height=>"270", :class=>"home_img"}