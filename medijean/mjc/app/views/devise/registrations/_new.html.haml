- if current_user.nil?
  .row
    .span4.home-signup
      = form_for(User.new, :as => :user, :url => registration_path(:user), :html => {:class => "sign_up_form"}) do |f|
        %p= devise_error_messages!
        %fieldset
          = f.label :email, t("devise.email"), :class => "white-clr"
          = f.email_field :email, :autofocus => true, :placeholder => t("placeholders.email")
        %fieldset
          = f.label :password, t("devise.password"), :class => "white-clr"
          = f.password_field :password, :placeholder => t("devise.password_length")
        / %fieldset
        /   = f.label :password_confirmation, t("devise.password_confirmation")
        /   = f.password_field :password_confirmation, :placeholder => t("devise.confirm_password")
        %button.btn.btn-orange
          = t("devise.sign_up_patient")
        %p.white-clr
          = t("homepage.signup_text")
  / .row
  /   .span4
  /     = check_box_tag "terms_of_use"
  /     = t("devise.text1")
  /     %b 
  /       = t("general.terms_of_use")
  /     = t("devise.text2")
  /     %b
  /       = t("general.privacy_policy")