.page-header
  %h1 Sign In
.container
  .row
    .span5
      = form_for(User.new, :as => :user, :url => session_path(:user)) do |f|
        %fieldset
          %label E-mail Address
          = f.email_field :email, :autofocus => true, :placeholder => t("placeholders.email")
        %fieldset
          %label Password
          = f.password_field :password, :placeholder => t("placeholders.password")
        %button.btn.btn-primary Get Started 
    .span7
      %img{:src=>"/assets/home_bg.png", :width=>"620", :height=>"270", :class=>"home_img"}
