- model_class = Family
.page-header
	%h1=t '.title', :default => model_class.model_name.human.titleize

%p
	%strong= model_class.human_attribute_name(:_id) + ':'
	%br
	= @family._id
%p
	%strong= model_class.human_attribute_name(:family_name) + ':'
	%br
	= @family.family_name
%p
	%strong= model_class.human_attribute_name(:family_id) + ':'
	%br
	= @family.family_id
%p
	%strong= model_class.human_attribute_name(:role_name) + ':'
	%br
	= @family.role_name

.form-actions
	= link_to t('.back', :default => t("helpers.links.back")), family_path, :class => 'btn'
	= link_to t('.edit', :default => t("helpers.links.edit")), edit_family_path(@family), :class => 'btn'
	= link_to t('.destroy', :default => t("helpers.links.destroy")), family_path(@family), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
