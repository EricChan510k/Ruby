:javascript
	$(document).ready(function() {		
		// Basic date picker with default settings 
		$("#date1").glDatePicker({
			leftMargin:0,
			topMargin:-10,
			inputTarget:true,
			showArrow:false,
			showAlways:true,
			div2Target:true
		}); 
		
		$('#calendar').fullCalendar({
			minTime: 4,
			maxTime: 24,
			height:600,
			defaultView: 'agendaDay',
			header: {
				left: '',
				center: 'prev title next today',
				right: 'agendaDay,agendaWeek,month'
			},
			editable: false,
			events: "/calendar/get_parent_data",
			timeFormat: 'h:mm t{ - h:mm t}',
		});
		
	});
