<script>
  function genral_health_data_save_major_illnesse(id){
    var details = $("#mi_details_"+id).val();
    var end_date = $("#mi_ed_date_"+id).val();
    var start_date = $("#mi_st_date_"+id).val();
    var health_issue = $("#mi_issue_"+id).val();
    var curren_user_id = '<%= current_user.id %>';

    console.log(id);
    $.post("/child_major_illnesses_update?id=" + id, 
      { 
        details: details, 
        end_date: end_date, 
        start_date: start_date, 
        health_issue: health_issue,
        curren_user_id: curren_user_id 
      }).done(function(data) {        
        $("#major_illnesses_div").html(data);
      });      
  }
  function genral_major_illnesse_save(obj){
    var details = $("#major_illnesse_details").val();
    var end_date = $("#child_major_illnesses_end_date").val();
    var start_date = $("#child_major_illnesses_start_date").val();
    var health_issue = $("#major_illness_issue").val();
    var curren_user_id = '<%= current_user.id %>';

    if(health_issue==""){
      alert("please select helth issue");
      return false
    }
    if(details=="" || details=="details" ){
      alert("please input details");
      return false
    }
    
    var url = 'users/genral_major_illnesses_save';
    $.post(url, { 
      details: details, 
      end_date: end_date, 
      start_date: start_date, 
      health_issue: health_issue,
      curren_user_id: curren_user_id 
    }).done(function(data) {
      $("#major_illnesses_div").html(data);
    });
    obj.hide();
  }

  $(document).ready(function(){
    $("#major_helth_issue ul.ac_scroll li a").click(function(){
      $("#hidden_major_helth_issue").val($(this).text());
    });
   });
</script>
